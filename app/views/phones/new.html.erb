<div id="send-pin">
  <h3>请输入你的电话号码</h3>
  <%= form_for @phone, remote: true do |f| %>
    <div class="form-group">
      <%= f.text_field :phone %>
    </div>
    <%= f.submit "Send PIN", class: "btn btn-primary", id: 'send-pin-link' %>
  <% end %>
</div>
<div id="verify-pin">
<h3>Enter your PIN</h3>
<%= form_tag phones_verify_path, remote: true do |f| %>
  <%= hidden_field_tag 'hidden_phone', '' %>
  <div class="form-group">
    <%= text_field_tag :pin %>
  </div>
  <%= submit_tag "Verify PIN", class: "btn btn-primary" %>
  <% end %>
</div>

