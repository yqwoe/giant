<div class="form-signin">
  <h4 class="form-signin-heading">请先登陆</h3>

  <%= form_for(resource,
                as: resource_name,
                url: session_path(resource_name),
              ) do |f| %>
     <label for="inputEmail" class="sr-only">Email address</label>
     <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "请输入手机或Email" %>

    <div class="field">
      <%= f.label "密码"%><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %>
          <%= f.label '记住密码'%>
       </label>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "登陆", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
