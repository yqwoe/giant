<div>
  <%= image_tag 'xss-logo.png', class: 'img-rounded', style: 'height: 150px; width: 150px;' %>
</div>
<div class="form-signin" style="color: white;">
  <h4 class="form-signin-heading">请先登陆</h3>

  <%= form_for(resource,
                as: resource_name,
                url: session_path(resource_name),
              ) do |f| %>
     <label for="inputEmail" class="sr-only">Email address</label>
     <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "手机号或Email" %>
     <br>
    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: '密码' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox pull-left">
        <label>
          <%= f.check_box :remember_me %>
          <%= f.label '记住密码'%>
       </label>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "登陆", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>
</div>
