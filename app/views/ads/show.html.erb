<div id='wx_logo' style='margin:0 auto;display:none;'>
  <%= image_tag 'xss-logo.png' %>
</div>
<header class="bg_orange">
    <span class="txt_white">主办方：</span>
    <%= image_tag 'logo.png' %>
</header>
<div class="content">
    <div class="name_box bg_orange">
        <span class="title txt_white">出行安全&nbsp;&nbsp;万人代言</span>
        <div class="name txt_white">我是
          <span id='user-name'>
            您的名字
          </span>
        </div>
        <span class="name txt_white">我为荷式开门代言</span>
    </div>
</div>
<footer class="bg_orange txt_white">
    <div class="footer_content">
        <h3 class="title">荷式开门法</h3>
        <span class="txt">用距车门较远的那只手开门，以便扭身查看车门后方是否有突发情况。</span>
        <button class="btn">点击生成海报</button> </div>
</footer>
<div class="form_box" style="display: none">
    <h3>请填写信息</h3>
    <%= form_for :ad do |f| %>
        <div class="name_box box">
          <label for="name">您的姓名：</label>
          <%= f.text_field 'name', id: 'name', placeholder: "请在这里填写您的姓名"  %>
        </div>
        <div class="pic_box box">
          <label for="pic">
            <span>您的照片：</span>
            <%= image_tag 'upload.jpg' %>
          </label>
          <%= f.file_field :avatar, multiple: true, id: 'pic' %>
          <span>请上传竖版图片</span>
        </div>
        <input class="submit" type="submit" name="" value="提交">
    <% end %>
</div>
<script type="text/javascript" charset="utf-8">
  $.urlParam = function(name){
    var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
    return results[1] || 0;
  }
  $('.btn').on('click', function() {
    $('.form_box').show();
  });
  $(document).ready(function(){
    var name = $.urlParam('name');
    name = decodeURI(name);
    var img = $.urlParam('img');

    document.title = '我是' + name + ', 荷式开门我接力...';

    $('#user-name').text(name);
    $('.content').css('background-image', 'url(uploads/ads/' + img + ')');
  });
</script>
