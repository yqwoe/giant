<%= form_for [:admin, @user], class: 'form-horizontal' do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message if message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :姓名, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style="margin-top: 40px;">
    <%= f.label :手机号码, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :mobile, class: 'form-control' %>
    </div>
  </div>
 <div class="form-group">
    <%= f.label :密码, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :password, class: 'form-control' %>
    </div>
  </div>
 <div class="form-group">
    <%= f.label :确认密码, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :password, class: 'form-control' %>
    </div>
  </div>
 <div class="form-group">
    <%= f.label :会员类别, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :roles, class: 'form-control' %>
    </div>
  </div>

  <table class="table" border="0" cellspacing="5" cellpadding="5">
    <tr>
      <th>
        车牌号
      </th>
      <th>开通日期</th>
      <th>有效日期</th>
      <th>编辑</th>
    </tr>
    <tr>
      <td>Data</td>
    </tr>
  </table>
  <%= f.submit "更新用户", class: 'btn btn-default' %>
<% end %>
